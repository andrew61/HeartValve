@{
    Html.Kendo().Chart<HeartValve.Models.OxygenSaturationViewModel>()
    .Name("SPO2Chart")
    .Legend(legend => legend
        .Position(ChartLegendPosition.Bottom)
    )
    .ChartArea(chartArea => chartArea
        .Background("transparent")
    )
    .SeriesDefaults(seriesDefaults =>
        seriesDefaults.Line().Style(ChartLineStyle.Smooth)
    )
    .DataSource(ds => ds.Read(read => read.Action("SPO2_Chart_Read", "Home").Data("spo2Data")))
    .Series(series =>
    {
        series.Line(model => model.SpO2).Name("Oxygen Saturation").Color("Blue");
    })
    .CategoryAxis(axis => axis
        .Categories(model => model.ReadingDate)
    .Labels(labels => labels.Rotation(-90))
    .Crosshair(c => c.Visible(true))
    )
    .ValueAxis(axis => axis.Numeric()
    .Labels(labels => labels.Format("{0:N0}"))
    //.MajorUnit(10000)
    )
    .Tooltip(tooltip => tooltip
    .Visible(true)
    .Shared(true)
    .Format("{0:N0}")
    ).Render();
}

